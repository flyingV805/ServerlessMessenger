<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/element_padding">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_bubble_in"
        android:paddingStart="@dimen/element_padding"
        android:paddingEnd="20dp"
        android:paddingBottom="@dimen/element_padding"
        android:paddingTop="@dimen/element_padding" />

</androidx.appcompat.widget.LinearLayoutCompat>